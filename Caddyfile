# Local development
localhost {
    handle_path /api* {
        reverse_proxy api-services:8080
    }

    handle {
        reverse_proxy frontend-service:80
    }

    file_server
}

# Production
espansobuilder.niemergk.com {
    handle_path /api* {
        reverse_proxy api-service:8080
    }

    handle {
        reverse_proxy frontend-service:80
    }

    file_server

    # Automatic HTTPS via Let's Encrypt
    tls espanso@niemergk.com
}
